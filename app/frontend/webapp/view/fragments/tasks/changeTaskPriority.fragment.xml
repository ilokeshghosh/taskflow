<core:FragmentDefinition
    xmlns:uxap="sap.uxap"
    xmlns:cards="sap.f.cards"
    xmlns:f="sap.f"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:p13n="sap.m.p13n"
    xmlns:fb="sap.ui.comp.filterbar"
>
    <Dialog
        title="Change Task Priority"
        id="changeTaskPriorityDialog"
    >
        <content>
            <List
                id="priorityChangeList"
                mode="SingleSelectLeft"
            >
                <items>
                    <StandardListItem
                        id="high"
                        title="High"
                        icon="sap-icon://high-priority"
                        iconDensityAware="false"
                        iconInset="false"
                        wrapping="true"
                    />

                    <StandardListItem
                        id="medium"
                        title="Medium"
                        icon="sap-icon://message-information"
                        iconDensityAware="false"
                        iconInset="false"
                        wrapping="true"
                    />

                    <StandardListItem
                        id="low"
                        title="Low"
                        icon="sap-icon://status-inactive"
                        iconDensityAware="false"
                        iconInset="false"
                        wrapping="true"
                    />
                </items>
            </List>
        </content>

        <beginButton>
            <Button text="Cancel" press=".onCancelTaskPriority"/>
        </beginButton>

        <endButton>
            <Button
                text="Update Task Priority"
                type="Emphasized"
                press=".onUpdateTaskPriority"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
