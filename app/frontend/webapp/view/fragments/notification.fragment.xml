    <Dialog
        id="notificationPopover"
        title="Notification Box"
        
       contentWidth="80%"
    contentHeight="80%"
    >
        <content>
            <!-- <List 
            items="{notifications>/}"
            >
            <items>
                <ObjectListItem title="[{notifications>action}]" >

                </ObjectListItem>
            </items>
            </List> -->

            <NotificationList width="100%" items="{notifications>/}">
                <items>
                    <NotificationListItem title="{notifications>projectId/name}"
                   

                    description="{= ${notifications>action} 
               + ' · ' 
               + ${notifications>taskId/title}
               + ' · ' 
               + ${notifications>details} }"
                    showCloseButton="false"
                    unread="true"
                    datetime="{notifications>createdAt}"
                    authorName="{notifications>userId/email}"
                    priority="None"
                    authorPicture="{path:'notifications>logType',formatter:'.formatter.formatLogType'}"
                    />
                </items>
            </NotificationList>
        </content>

        <endButton>
        <Button press=".onCloseNotification" type="Emphasized" text="Close"></Button>
        </endButton>
    </Dialog>
