<core:FragmentDefinition
    xmlns:uxap="sap.uxap"
    xmlns:cards="sap.f.cards"
    xmlns:f="sap.f"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <Dialog
        title="Edit Task"
        id="EditTaskDialog"
    >
        <content>
            <form:SimpleForm>
                <form:content>
                    <!-- Task Title -->
                    <Label
                        text="Title"
                        required="true"
                    />

                    <Input
                        type="Text"
                        required="true"
                        placeholder="Enter Task Name"
                        value="{title}"
                    />

                    <!-- Task Description -->
                    <Label text="Description" />

                    <TextArea
                        rows="2"
                        cols="5"
                        value="{description}"
                    />

                    <!-- Task Priority -->
                    <Label text="Priority" />
                    <Select
                        id="taskEditClientInputPriority"
                        selectedKey="{priority}"
                    >
                        <core:Item
                            key="low"
                            text="Low"
                        />
                        <core:Item
                            key="medium"
                            text="Medium"
                        />
                        <core:Item
                            key="high"
                            text="High"
                        />
                    </Select>
                    <!-- Task Due Date -->
                    <Label text="Due Date" />
                    <DatePicker
                        displayFormat="MM/dd/yyyy"
                        valueFormat="yyyy-MM-dd"
                        value="{dueDate}"
                    />

                    <!-- Task Assign To -->
                    <Label text="Assign To" />
                    <Select
                        id="taskEditClientInputAssigne"
                        items="{/Users}"
                        selectedKey="{editTaskLocal>/ID}"
                    >
                        <items>
                            <core:Item
                                key="{ID}"
                                text="{firstname} {lastname}"
                            />
                        </items>
                    </Select>

                    <!-- Task Status -->
                    <Label text="Status" />
                    <Select
                        id="taskEditClientInputStatus"
                        selectedKey="{status}"
                    >
                        <core:Item
                            key="hold"
                            text="Hold"
                        />
                        <core:Item
                            key="open"
                            text="Open"
                        />
                        <core:Item
                            key="completed"
                            text="Completed"
                        />
                        <core:Item
                            key="overdue"
                            text="Overdue"
                        />
                        <core:Item
                            key="onReview"
                            text="On Review"
                        />
                    </Select>

                    <!-- <Label visible="false" text="Projects" />
                    <Select
                        id="taskEditClientInputProject"
                        items="{/Projects}"
                        visible="false"
                    >
                        <core:Item
                            key="{ID}"
                            text="{name}"
                        />
                    </Select> -->
                </form:content>
            </form:SimpleForm>
        </content>

        <beginButton>
            <!-- Task Save -->
            <Button
                text="Save Changes"
                type="Emphasized"
                press=".onSubmitEditTask"
            />
        </beginButton>
        <endButton>
            <!-- Cancel Button -->
            <Button
                type="Reject"
                text="Cancel"
                press=".onCloseEditTaskDialog"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
