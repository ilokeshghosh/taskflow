<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
    xmlns:u="sap.ui.unified"
    xmlns:layout="sap.ui.layout"
>
    <Dialog
        id="createProjectDialog"
        showHeader="true"
        verticalScrolling="true"
        contentHeight="80%"
        contentWidth="40%"
        title="Create Project"
    >
        <content>
            <form:SimpleForm
                layout="ResponsiveGridLayout"
                id="createProjectForm"
                editable="true"
                class="border1"
                backgroundDesign="Translucent"
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                labelSpanS="12"
                emptySpanXL="4"
                emptySpanL="4"
                emptySpanM="4"
                emptySpanS="0"
                columnsXL="2"
                columnsL="2"
                columnsM="1"
            >
                <form:content>
                    <core:Title text="Project Details" />
                    <!-- Project Name -->
                    <Label
                        text="Name"
                        required="true"
                    />
                    <Input
                        type="Text"
                        required="true"
                        placeholder="Enter Project Name"
                        value="{createProjectModel>/name}"
                    />

                    <!-- Project Description -->
                    <Label text="Description" />
                    <TextArea
                        placeholder="Enter Description"
                        rows="3"
                        cols="4"
                        value="{createProjectModel>/description}"
                    />

                    <!-- Select Members -->
                    <Label text="Members" visible="false"/>
                    <MultiComboBox
                    visible="false"
                        selectedKeys="{createProjectModel>/members}"
                        width="350px"
                         items="{
                        path:'/Users',
                            filters:[
                            {path:'type',operator:'NE',value1:'clientUser'}
                            ]
                        }"
                    >
                        <items> 
                            <core:Item
                                key="{ID}"
                                text="{firstname} {lastname}"
                                
                            />

                            
                        </items>
                    </MultiComboBox>

                    <!-- Manager Name -->
                    <Label
                        text="Manager"
                        required="true"
                        visible="false"
                    />
                    <Input
                        type="Text"
                        value="Your Name"
                        editable="false"
                        enabled="false"
                        visible="false"
                    />

                    <!-- Start Date -->
                    <Label text="Start Date" />
                    <DatePicker
                        displayFormat="MM/dd/yyyy"
                        valueFormat="yyyy-MM-dd"
                        value="{createProjectModel>/startDate}"
                        id="startDateInput"
                    />

                    <!-- Dealine  -->
                    <Label text="Deadline" />
                    <DatePicker
                        displayFormat="MM/dd/yyyy"
                        valueFormat="yyyy-MM-dd"
                        value="{createProjectModel>/deadline}"
                    />

                    <!-- client name -->
                    <Label text="Client" />
                    <Select
                        id="projectCreateClientInput"
                        selectedKey="{createProjectModel>/clientName}"
                        items="{
                        
                        path:'/Users',
                            filters:[{path:'type',operator:'EQ',value1:'clientUser'}]
                        }"
                    >
                        <items>
                            <core:Item
                                key="{ID}"
                                text="{firstname}"
                            />
                        </items>
                    </Select>

                    <!-- Budget -->
                    <Label text="Budget" />
                    <Input
                        value="{createProjectModel>/budget}"
                        type="Number"
                    />

                    <!-- Projec Progress Slider -->
                    <core:Title text="Project Progress and Status" />
                    <Label
                        class=""
                        text="Progress"
                    />
                    <Slider
                        value="{createProjectModel>/progress}"
                        min="0"
                        max="100"
                        inputsAsTooltips="true"
                        showAdvancedTooltip="true"
                    />

                    <!-- Project Priority -->
                    <Label text="Priority" />
                    <Select selectedKey="{createProjectModel>/priority}">
                        <core:Item
                            key="low"
                            text="Low"
                        />
                        <core:Item
                            key="medium"
                            text="Medium"
                        />
                        <core:Item
                            key="high"
                            text="High"
                        />
                    </Select>

                    <!-- Project Priority -->
                    <Label text="Status" />
                    <Select selectedKey="{createProjectModel>/status}">
                        <core:Item
                            key="hold"
                            text="Hold"
                        />
                        <core:Item
                            key="planning"
                            text="Planning"
                        />
                        <core:Item
                            key="inProgress"
                            text="In Progress"
                        />
                        <core:Item
                            key="completed"
                            text="Completed"
                        />
                    </Select>
                </form:content>
            </form:SimpleForm>
        </content>

        <beginButton>
            <!-- Create Button -->
            <Button
                text="Create Project"
                type="Emphasized"
                press="onCreateProjectSubmit"
            />
        </beginButton>
        <endButton>
            <!-- Cancel Button -->
            <Button
                text="Cancel"
                type="Transparent"
                press="onCancelCreateProject"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
