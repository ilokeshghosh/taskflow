    <core:FragmentDefinition
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:card="sap.f.cards"
>
    <!-- Home Panel -->
    <Panel
        class="homePanel"
        height="100%"
        width="100%"
    >
        <content>
            <!-- Home page container -->
            <FlexBox
                direction="Column"
                justifyContent="Center"
                gap="2rem"
                width="100%"
            >
                <!-- UPPER SECTION || KPI TILES container-->
                <HBox
                    class=""
                    wrap="Wrap"
                    justifyContent="SpaceAround"
                    width="100%"
                >
                    <!-- Total Project KPI Tile || TO BE IMPLEMENTED (MoM Growth Status Indicator) -->
                    <GenericTile
                        mode="ContentMode"
                        header="Total Projects"
                        class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout "
                    >
                        <TileContent
                            footer="from last month"
                            class=""
                        >
                            <NumericContent
                                valueColor="Good"
                                value="{/Projects/$count}"
                                indicator="Up"
                                scale="C"
                                icon="sap-icon://document-text"
                            />
                        </TileContent>
                    </GenericTile>

                    <!-- Total Tasks KPI Tile || TO BE IMPLEMENTED (MoM Growth Status Indicator) -->
                    <GenericTile
                        mode="ContentMode"
                        header="Total Tasks"
                        class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout "
                    >
                        <TileContent
                            footer="from last month"
                            class=""
                        >
                            <NumericContent
                                valueColor="Good"
                                value="{/Tasks/$count}"
                                indicator="Up"
                                scale="C"
                                icon="sap-icon://activity-items"
                            />
                        </TileContent>
                    </GenericTile>

                    <!-- Total Tasks with status 'In Progress' KPI Tile || TO BE IMPLEMENTED (MoM Growth Status Indicator) -->
                    <GenericTile
                        mode="ContentMode"
                        header="In Progress"
                        class="sapUiTinyMargin sapUiTinyMarginTop tileLayout"
                    >
                        <TileContent footer="from last month">
                            <NumericContent
                                id="openCount"
                                valueColor="Error"
                                value="0"
                                indicator="Down"
                                scale="C"
                                icon="sap-icon://pending"
                            />
                        </TileContent>
                    </GenericTile>

                    <!-- Total Tasks with status 'Completed' KPI Tile || TO BE IMPLEMENTED (MoM Growth Status Indicator) -->
                    <GenericTile
                        mode="ContentMode"
                        header="Completed"
                        class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
                    >
                        <TileContent footer="from last month">
                            <NumericContent
                                id="completedCount"
                                valueColor="Good"
                                value=""
                                indicator="Up"
                                scale="C"
                                icon="sap-icon://task"
                            />
                        </TileContent>
                    </GenericTile>

                    <!-- Total Tasks with status 'Overdue' KPI Tile || TO BE IMPLEMENTED (MoM Growth Status Indicator) -->
                    <GenericTile
                        mode="ContentMode"
                        header="Overdue"
                        class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
                    >
                        <TileContent footer="from last month">
                            <NumericContent
                                id="overdueCount"
                                valueColor="Critical"
                                value=""
                                indicator="Up"
                                scale="C"
                                icon="sap-icon://message-warning"
                            />
                        </TileContent>
                    </GenericTile>
                </HBox>

                <!--LOWER SECTION || Project Overview panel(To show all projects) || TO BE IMPLEMENTED ( display top 3 projects which is most valuable in terms of budget, priority, client), need to write custom algo -->
                <Panel width="100%">
                    <!-- All Projects Header Container || TO BE IMPLEMENTED (Apply Filters and search options and view all) -->
                    <headerToolbar>
                        <OverflowToolbar style="Clear">
                            <Title
                                text="Project Overview"
                                level="H1"
                            />
                        </OverflowToolbar>
                    </headerToolbar>
                    <!-- All Project Content Container -->
                    <content>
                        <!-- All Project Cards Container -->
                        <FlexBox
                            justifyContent="SpaceAround"
                            class="projectOverViewFlex"
                            width="100%"
                            wrap="Wrap"
                            items="{/Projects}"
                            gap="1rem"
                        >
                            <!-- Project Card -->
                            <items>
                                <f:Card
                                    class="projectCard sapUiContentPadding sapUiSmallMarginBottom"
                                >
                                    <f:content>
                                        <VBox
                                            class="cardContent border2 sapUiTinyMargin"
                                            width="100%"
                                        >
                                            <!-- UPPER CONTAINER || header section -->
                                            <HBox
                                                justifyContent="SpaceBetween"
                                                alignItems="Start"
                                                class="cardHeader"
                                                wrap="Wrap"
                                                width="100%"
                                            >
                                                <!-- LEFT : Title & Desc -->
                                                <VBox
                                                    width="80%"
                                                    wrap="Wrap"
                                                    class="titleSection"
                                                >
                                                    <Title
                                                        text="{name}"
                                                        level="H5"
                                                        class="cardTitle"
                                                    />
                                                    <Text
                                                        text="{description}"
                                                        class="cardSubtitle sapUiTinyMarginTop"
                                                    />
                                                </VBox>

                                                <!-- RIGHT : Status Badge -->
                                                <ObjectStatus
                                                    text="{status}"
                                                    state="{path:'status',formatter:'.formatter.formatStatus'}"
                                                    class="statusBadge"
                                                    inverted="true"
                                                />
                                            </HBox>

                                            <!-- LOWER CONTAINER || deadline & progress bar -->
                                            <VBox
                                                class=""
                                                justifyContent="End"
                                            >
                                                <!-- UPPER || deadline section -->
                                                <HBox
                                                    alignItems="Center"
                                                    class="deadlineSection sapUiSmallMarginTop"
                                                    width="100%"
                                                    justifyContent="SpaceBetween"
                                                >
                                                    <HBox gap="2px">
                                                        <core:Icon
                                                            src="sap-icon://appointment-2"
                                                            size="1rem"
                                                            color="#666"
                                                            class=""
                                                        />

                                                        <Text
                                                            text="{deadline}"
                                                            class="deadlineText"
                                                        />
                                                    </HBox>

                                                    <!-- Three dots menu -->

                                                    <Button
                                                        visible="false"
                                                        icon="sap-icon://overflow"
                                                        type="Transparent"
                                                        press=".onMenuPress"
                                                    />
                                                </HBox>

                                                <!-- LOWER || progress section -->
                                                <VBox
                                                    class="progressSection "
                                                    justifyContent="End"
                                                >
                                                    <HBox
                                                        justifyContent="SpaceBetween"
                                                        alignItems="Center"
                                                        class=""
                                                    >
                                                        <Text
                                                            text="Progress"
                                                            class="progressLabel"
                                                        />
                                                        <Text
                                                            text="{progress}%"
                                                            class="progressValue"
                                                        />
                                                    </HBox>

                                                    <ProgressIndicator
                                                        percentValue="{progress}"
                                                        class="progressBar"
                                                        width="100%"
                                                        displayAnimation="true"
                                                        displayOnly="true"
                                                    />
                                                </VBox>
                                            </VBox>
                                        </VBox>
                                    </f:content>
                                </f:Card>
                            </items>
                        </FlexBox>
                    </content>
                </Panel>

                <!-- TO BE IMPLEMENTED || add Analytics, user progress, user Tasks, team performance, team member  -->
            </FlexBox>
        </content>
    </Panel>
</core:FragmentDefinition>
