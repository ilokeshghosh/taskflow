<mvc:View
    xmlns:layout="sap.ui.layout"
    controllerName="com.taskflow.dev.frontend.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:tnt="sap.tnt"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
    <SplitApp
        id="taskflowLadingPage"
        initialDetail="detail"
        initialMaster="master"
    >
        <masterPages>
            <Page
                id="master"
                title="TaskFlow"
                backgroundDesign="List"
                showFooter="true"
            >
                <List itemPress=".onNavItemPress">
                    <items>
                        <StandardListItem
                            title="Home"
                            type="Active"
                            custom:to="home"
                            icon="sap-icon://home"
                        />
                        <StandardListItem
                            title="Projects"
                            type="Active"
                            custom:to="project"
                            icon="sap-icon://newspaper"
                        />
                        <StandardListItem
                            title="Tasks"
                            type="Active"
                            custom:to="tasks"
                            icon="sap-icon://task"
                        />
                        <StandardListItem
                            title="Kanban Desk"
                            type="Active"
                            custom:to="kanbanDesk"
                            icon="sap-icon://grid"
                        />
                        <StandardListItem
                            title="Calender"
                            type="Active"
                            custom:to="calender"
                            icon="sap-icon://appointment-2"
                        />

                        <!-- projects -->
                        <StandardListItem
                            title="Projects"
                            type="Navigation"
                            press=".onPressGoToProjectsMaster"
                           icon="sap-icon://business-objects-mobile"
                        />
                    </items>
                </List>

                <footer >
                    <Toolbar height="auto">
                        <List>
                            <StandardListItem
                                icon="sap-icon://add-activity"
                                type="Active"
                                title="Create Task"
                                 press="handleOpenCreateTaskDialog"
                            />

                             <StandardListItem
                                icon="sap-icon://add"
                                iconInset="true"
                                type="Active"
                                title="Create Project"
                                press="handleOpenCreateProjectDialog"
                            />


                             <StandardListItem
                                icon="sap-icon://bell"
                                iconInset="true"
                                type="Active"
                                title="Notifications"
                            />

                            <StandardListItem class="" title="Version : 0.0.1">
                            
                            <avatar>
                            <Avatar showBorder="true" displayShape="Circle" src="https://ik.imagekit.io/8fgpvoiai/profile/profile-image-black-white_81gzUNk43.png?updatedAt=1703005079604"></Avatar>
                            </avatar>
                            </StandardListItem>

                            
                        </List>
                    </Toolbar>
                </footer>
            </Page>

            <Page
                id="projects"
                title="Projects"
                backgroundDesign="List"
                showNavButton="true"
                navButtonPress=".onPressMasterBack"
            >
                <List
                    id="navItems"
                    itemPress=".onListItemPress"
                >
                    <items>
                        <StandardListItem
                            title="Project1"
                            type="Active"
                            custom:to="detail"
                        />
                        <StandardListItem
                            title="Project2"
                            type="Active"
                            custom:to="detailDetail"
                        />
                        <StandardListItem
                            title="Project3"
                            type="Active"
                            custom:to="detail2"
                        />
                    </items>
                </List>
            </Page>
        </masterPages>

        <detailPages>
            <Page
                id="home"
                showHeader="true"
                title="Home"
                backgroundDesign="Solid"
            >
                <core:Fragment
                    fragmentName="com.taskflow.dev.frontend.view.fragments.home"
                    type="XML"
                />
            </Page>

            <Page
                id="project"
                backgroundDesign="Solid"
                showHeader="true"
                title="Projects"
            >
                <core:Fragment
                    fragmentName="com.taskflow.dev.frontend.view.fragments.projects"
                    type="XML"
                />
            </Page>

            <Page
                id="tasks"
                backgroundDesign="Solid"
                showHeader="true"
                title="Tasks"
                >
                <core:Fragment
                    fragmentName="com.taskflow.dev.frontend.view.fragments.tasks"
                    type="XML"
                />
            </Page>
        </detailPages>
    </SplitApp>
</mvc:View>
